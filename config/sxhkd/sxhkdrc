# Get a password from pass(1)
mod4 + p 
    passmenu -l 10 -bw 1 -c -p Password?

# Use the window list to raise and focus a particular window
mod4 + s
    winsearch -c -p Window:

# Use dmenu to run a command
Hyper_L
    dmenu-run -c -l 10 -p Command:

# 3-finger saulte
ctrl + alt + Delete
    dmenu-menu exitrc -c

# Terminal
mod4 + t
    my terminal

# Browser
mod4 + b
    jumpapp -c Navigator.Firefox firefox

# Add bookmark to buku
mod4 + B
    bukuadd

# Main terminal
#
# if 'main' session is not running, launch it detached and then
# connect to it on the second window (which is the one after 'apps')
mod4 + Return
    if ! tmux ls | grep -q ^main: ; then tmuxp load -d main; fi; \
    wmctrl -xa main || tabbed -cd -n main -r2 alacritty --embed ID -e ~/src/scripts/launchterm main

# Various apps
#
mod4 + F10
    jumpapp -i discord discord
mod4 + F11
    jumpapp -i signal signal-desktop
mod4 + F9
    jumpapp -i whalebird whalebird

# Screenshots
#
Print
    screenshot area
shift + Print
    screenshot current
alt + Print
    screenshot screen
ctrl + Print
    screenshot -d 5 area
ctrl + shift + Print
    screenshot -d 5 current
ctrl + alt + Print
    screenshot -d 5 screen

# Volume controls
#
XF86AudioMute
    change_volume mute
XF86AudioLowerVolume
    change_volume -1%
XF86AudioRaiseVolume
    change_volume +1%

# Brightness controls
#
XF86MonBrightnessDown
    change_brightness -5%
XF86MonBrightnessUp
    change_brightness +5%

