# Get a password from pass(1)
mod4 + p 
    passmenu -l 10 -bw 1 -c -p Password?

# Use the window list to raise and focus a particular window
mod4 + s
    winsearch -l 10 -bw 1 -c -p Window:

# Use dmenu to run a command
Super_R
    dmenu_run -l 10 -bw 1 -c -p Command:

# 3-finger saulte
ctrl + alt + Delete
    dmenu-menu exitrc

# Browser
mod4 + b
    jumpapp -c Navigator.Firefox firefox

# Main terminal
#
# if 'main' session is not running, launch it detached and then
# connect to it on the second window (which is the one after 'apps')
mod4 + Return
    if ! tmux ls | grep ^main >/dev/null; then tmuxp load -d main; fi; \
    jumpapp -c st.St -t main st -t main -e tmux new -t main \; select-window -t 2 \;

# Apps terminal
#
# if 'main' session is not running, launch it detached and then
# connect to it on the apps window
mod4 + ctrl + Return
    if ! tmux ls | grep ^main >/dev/null; then tmuxp load -d main; fi; \
    jumpapp -c st.St -t apps st -t apps -e tmux new -t main \; select-window -t apps \;

# Various apps
#
F10
    jumpapp -i Discord Discord
F11
    jumpapp -i Signal flatpak run org.signal.Signal
F12
    jumpapp -i "Microsoft Teams" teams

# Volume controls
#
XF86AudioMute
    change_volume mute
XF86AudioLowerVolume
    change_volume -1%
XF86AudioRaiseVolume
    change_volume +1%

# Brightness controls
#
XF86MonBrightnessDown
    change_brightness -5%
XF86MonBrightnessUp
    change_brightness +5%
