# Get a password from pass(1) {{{1
mod4 + p 
    passmenu -l 10 -bw 1 -c -p Password?

# Use the window list to raise and focus a particular window {{{1
mod4 + s
    winsearch -c -p Window:

# Use dmenu to run a command {{{1
Hyper_L
    dmenu-run -c -l 10 -p Command:

# 3-finger saulte {{{1
ctrl + alt + Delete
    dmenu-menu exitrc -c

# Add bookmark to buku {{{1
mod4 + B
    bukuadd

# Main terminal {{{1
#
# Launch all tmuxp session in detached mode and then connect to 'main'
mod4 + Return
    for f in "$XDG_CONFIG_HOME/tmuxp/"*; do tmuxp load -d "$(basename "$f" .yaml)"; done; \
    wmctrl -xa main || tabbed -cd -n main -r2 alacritty --embed ID -e ~/src/scripts/launchterm main

# Various apps {{{1
#
mod4 + t
    my terminal
mod4 + b
    jumpapp -c Navigator.Firefox firefox
mod4 + F10
    jumpapp -i discord discord
mod4 + F11
    jumpapp -i signal signal-desktop
mod4 + F9
    jumpapp -i whalebird whalebird
# XF86Back
# XF86Forward
# Cancel
# XF86Reload
# XF86HomePage
XF86Mail
    tmux move-window -s $(ftmux -s $(tmux show-option -gv @hidden-session) -p window -1 -- mail)
# XF86Explorer
XF86Calculator
    my calculator

# Screenshots {{{1
#
Print
    screenshot area
shift + Print
    screenshot current
alt + Print
    screenshot screen
ctrl + Print
    screenshot -d 5 area
ctrl + shift + Print
    screenshot -d 5 current
ctrl + alt + Print
    screenshot -d 5 screen

# Volume controls {{{1
#
XF86AudioMute
    change_volume mute
XF86AudioLowerVolume
    change_volume -1%
XF86AudioRaiseVolume
    change_volume +1%

# Brightness controls {{{1
#
XF86MonBrightnessDown
    change_brightness -5%
XF86MonBrightnessUp
    change_brightness +5%

# Music controls {{{1
XF86AudioStop
    mpc stop
XF86AudioPrev
    mpc prev
XF86AudioNext
    mpc next
XF86AudioPlay
    mpc toggle
XF86Tools
    tmux move-window -s $(ftmux -s $(tmux show-option -gv @hidden-session) -p window -1 -- music)

