Include ~/.ssh/config.d/*.conf

Host *
    # Ubuntu likes to hash known hosts which prevents
    # bash hostname completion from working
    HashKnownHosts no

    ControlMaster auto
    ControlPath ~/.ssh/sockets/%r@%k:%p
    ControlPersist 300

    IdentitiesOnly yes

    # Force IPv4 everywhere
    AddressFamily inet

# Play tron over SSH
Host tron
    HostName sshtron.zachlatta.com
    User green

# Provide a path to my GitHub key because I no longer keep it in the default
# location
Host github.com
    HostName github.com
    IdentityFile ~/.ssh/keys/github

