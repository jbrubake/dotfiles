Include ~/.ssh/config.d/*.conf

Host *
    # Ubuntu likes to hash known hosts which prevents
    # bash hostname completion from working
    HashKnownHosts no

    ControlMaster auto
    ControlPath ~/.ssh/sockets/%r@%k:%p
    ControlPersist 300

    IdentitiesOnly yes

    # Force IPv4 everywhere
    AddressFamily inet

# Use the following as a template for accessing older SSH servers
# (such as older Gli-Net and OpenWRT devices). You must also use a custom
# openssl configuration. (See https://raw.githubusercontent.com/jbrubake/dotfiles/refs/heads/master/openssl-compat.cnf)
#
# OPENSSL_CONF=/path/to/openssl-compat.cnf ssh compat
#
# Host compat
#    HostkeyAlgorithms +ssh-rsa
#    PubkeyAcceptedAlgorithms +ssh-rsa

# Play tron over SSH
Host tron
    HostName sshtron.zachlatta.com

# Provide a path to my GitHub key because I no longer keep it in the default
# location
Host github.com
    HostName github.com
    IdentityFile ~/.ssh/keys/github

