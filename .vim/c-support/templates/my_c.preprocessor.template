$-------------------------------------------------------------------------
== preprocessor.include-global ==
#include <<CURSOR>>
$-------------------------------------------------------------------------
== preprocessor.include-local ==
#include "<CURSOR>"
$-------------------------------------------------------------------------
== preprocessor.define ==
#define	<CURSOR> /*  */
$-------------------------------------------------------------------------
== preprocessor.undefine ==
#undef <CURSOR> /*  */
$-------------------------------------------------------------------------
== preprocessor.if-else-endif ==
#if |?CONDITION:u|
<CURSOR><SPLIT>
#else /* !|CONDITION| */
<+ELSE PART+>
#endif /* |CONDITION| */
$-------------------------------------------------------------------------
== preprocessor.ifdef-else-endif ==
#ifdef |?CONDITION:u|
<CURSOR><SPLIT>
#else /* !|CONDITION| */
<+ELSE PART+>
#endif /* !|CONDITION| */
$-------------------------------------------------------------------------
== preprocessor.ifndef-else-endif ==
#ifndef |?CONDITION:u|
<CURSOR><SPLIT>
#else  /* !|CONDITION| */
<+ELSE PART+>
#endif /* !|CONDITION| */
$-------------------------------------------------------------------------
== preprocessor.ifndef-def-endif ==
#ifndef |?BASENAME:L|_H
#define |BASENAME|_H
<CURSOR><SPLIT>
#endif /* !|BASENAME|_H */
$-------------------------------------------------------------------------
== preprocessor.error ==
#error "<CURSOR>" /*  */
$-------------------------------------------------------------------------
== preprocessor.line ==
#line <CURSOR> /*  */
$-------------------------------------------------------------------------
== preprocessor.pragma ==
#pragma	<CURSOR> /*  */
$-------------------------------------------------------------------------
