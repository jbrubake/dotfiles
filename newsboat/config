# vim: set ft=config
#
include /usr/share/doc/newsboat/contrib/colorschemes/solarized-dark

# pull feeds from oldreader
#
urls-source oldreader
oldreader-login jbru362@gmail.com
oldreader-passwordeval "pass show theoldreader.com"

oldreader-flag-star "b" # map flag b to oldreader star
oldreader-flag-share "a" # map flag a to oldreader share

cache-file "~/var/cache/newsboat/cache.db"
cookie-cache "~/var/cache/newsboat/cookies.txt"
error-log "~/var/log/newsboat.log"

# reload feeds every hour
auto-reload yes
reload-time 60

# First arg is notification string
notify-program "~/bin/newsboat_notify"

